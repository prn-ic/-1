<Window x:Class="Tableware.Windows.AppendProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Tableware.ViewModels"
        xmlns:views="clr-namespace:Tableware.Views"
        xmlns:local="clr-namespace:Tableware.Windows"
        mc:Ignorable="d"
        Title="Добавить продукт" Height="600" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:AppendProductViewModel}">
                <views:AppendProductView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
